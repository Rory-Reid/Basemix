@page "/litters"
@using Basemix.Lib

<CreateHeader OnCreate="CreateLitter"/>

<h1>Litters</h1>

<p>Click any litter to view details.</p>

<div class="form-check">
    <input type="checkbox" class="form-check-input" id="ownedCheckbox" @bind="@Filter.LittersShowOnlyBredByMe" @bind:after="@Search">
    <label class="form-check-label" for="ownedCheckbox">Only show bred by me</label>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">DoB</th>
        <th scope="col">Name</th>
        <th scope="col"># of rats</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var litter in LitterList)
    {
        <tr @onclick="@(() => OpenLitterProfile(litter.Id))">
            <th scope="row">@(litter.DateOfBirth.ToLocalizedString())</th>
            <td>@(litter.LitterName)</td>
            <td>@litter.OffspringCount</td>
        </tr>
    }
    </tbody>
</table>
