@page "/owners"

<CreateHeader OnCreate="CreateOwner" />

<h1>Owners</h1>

<p>Click any owner to view their profile</p>

<div class="input-group mb-3">
    <input id="ratSearchInput" type="text" class="form-control" @bind="SearchTerm" placeholder="Search for an owner here"/>
    <div class="input-group-append">
        <button class="btn btn-primary" @onclick="Search">
            <span class="oi oi-magnifying-glass"></span>
        </button>
    </div>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var owner in OwnersList)
    {
        <tr @onclick="@(() => OpenOwnerProfile(owner.Id))">
            <th scope="row">@(owner.Name ?? "Unnamed owner")</th>
        </tr>
    }
    </tbody>
</table>